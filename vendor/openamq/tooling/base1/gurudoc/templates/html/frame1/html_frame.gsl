#####################   FUNCTION GENERATE_GDL_BEFORE   ######################

function generate_gdl_before 
    g_header_level = 0
    g_header_count = 0
    g_doc_count    = 1
    g_doc_index    = 0
    g_figure_count = 0

    title       = "$(name):"
    toc         = ""
    product     = "OpenKernel "
    version     = "1.2"
    imageheader = "bopenk.jpg"
    body        = ""
    copyright   = "Copyright © 1991-2009 iMatix Corporation"
endfunction


######################   FUNCTION GENERATE_TOC_ENTRY   ######################

function generate_toc_entry
    header_level += 1

    if header_level <= page
        toc += "<ul>\n"
        for header where defined (.)
            header_count += 1

            toc += "<li>\n"
            toc += "<a href=\"$(base)$(doc_count).htm#TOC$(header_count)\">$(.)</a>"
            toc += "</li>\n"
    
            generate_toc_entry ()
        endfor header
        toc += "</ul>\n"
    endif
    
    header_level -= 1
endfunction


#########################   FUNCTION GENERATE_TOC   #########################

function generate_toc
    header_level = 1
    header_count = 0
    doc_count = 1
    toc = ""

    toc += "<ul>\n"

    for gdl.header where defined (.)
        header_count += 1

        toc += "<li>\n"
        toc += "<a href=\"$(base)$(doc_count).htm#TOC$(header_count)\">$(.)</a>"
        toc += "</li>\n"

        generate_toc_entry ()

        doc_count += 1
    endfor header

    toc += "</ul>\n"
endfunction


######################   FUNCTION GENERATE_GDL_AFTER   ######################

function generate_gdl_after
    generate_toc ()

    output "$(base).htm"
    template 1
.   include "tpl_frame.htm"
.   endtemplate
    close

    output "$(base)_top.htm"
    template 1
.   include "tpl_frame_top.htm"
.   endtemplate
    close

    output "$(base)_toc.htm"
    template 1
.   include "tpl_frame_toc.htm"
.   endtemplate
    close

    output "$(base)_bot.htm"
    template 1
.   include "tpl_frame_bot.htm"
.   endtemplate
    close
endfunction


####################   FUNCTION GENERATE_HEADER_BEFORE   ####################

function generate_header_before
    g_header_level += 1

    if defined (.)
        body += "<h$(g_header_level)>"

        if g_header_level <= page
            g_header_count += 1

            body += "<a name=\"TOC$(g_header_count)\">$(.)</a>"

            if g_header_level = 1
                echo "Processing chapter $(.)"
            endif
        else
            body += "$(.)"
        endif

        body += "</h$(g_header_level)>\n"
    endif
endfunction


####################   FUNCTION GENERATE_HEADER_AFTER   #####################

function generate_header_after
    if defined (.) & g_header_level = 1
        output "$(base)$(g_doc_count).htm"

        echo "$(outfile) generated..."

        template 1
.       include "tpl_frame_body.htm"
.       endtemplate
        close

        #   reset body
        body = ""

        g_doc_count += 1
        g_doc_index += 1
    endif

    g_header_level -= 1
endfunction


